{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "crons": [
    {
      "path": "/api/v1/cron",
      "schedule": "31 16 * * *"  // Run at 10:01 PM IST (4:31 PM UTC)
    }
  ]
}
